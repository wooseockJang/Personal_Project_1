<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 자동완성: ctrl + enter -->
<mapper namespace="com.simplecoding.repositoryexam.mapper.auth.MemberMapper">
	
	<!-- 상세조회 sql : email -->
	<select id="authenticate" parameterType="MemberVO" resultType="MemberVO">
		SELECT * FROM TB_MEMBER WHERE EMAIL = #{email}
	</select>
	
	<!-- INSERT -->
	<insert id="register" parameterType="MemberVO">
		 INSERT INTO TB_MEMBER(EMAIL, PASSWORD, NAME, BIRTH, PHONENUMBER)
      	 VALUES (#{email}, #{password}, #{name}, #{birth}, #{phoneNumber})
	</insert>
	
</mapper>
