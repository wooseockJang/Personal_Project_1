        <typeAlias type="com.simplecoding.repositoryexam.vo.common.Criteria" alias="Criteria"/>
        <typeAlias type="com.simplecoding.repositoryexam.vo.basic.DeptVO" alias="DeptVO"/>
        <typeAlias type="com.simplecoding.repositoryexam.vo.basic.EmpVO" alias="EmpVO"/>
        <typeAlias type="com.simplecoding.repositoryexam.vo.basic.FaqVO" alias="FaqVO"/>
        <typeAlias type="com.simplecoding.repositoryexam.vo.advanced.FileDbVO" alias="FileDbVO"/>
        <typeAlias type="com.simplecoding.repositoryexam.vo.advanced.GalleryVO" alias="GalleryVO"/>
    </typeAliases>
	

</configuration>